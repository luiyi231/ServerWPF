<Window x:Class="ServerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerWPF"
        mc:Ignorable="d"
        Title="Servidor de Base de Datos" Height="450" Width="800">
    <Grid>
        <!-- Definir filas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Label Grid.Row="0" 
               Content="Servidor de Base de Datos"
               FontSize="20"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="10"/>

        <!-- Panel de control -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">

            <Button x:Name="StartButton"
                    Content="Iniciar Servidor"
                    Width="120"
                    Height="30"
                    Margin="5"
                    Click="StartButton_Click"/>

            <Button x:Name="StopButton"
                    Content="Detener Servidor"
                    Width="120"
                    Height="30"
                    Margin="5"
                    IsEnabled="False"
                    Click="StopButton_Click"/>

            <Label x:Name="StatusLabel"
                   Content="Estado: Detenido"
                   Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Log de actividad -->
        <TextBox x:Name="LogTextBox"
                 Grid.Row="2"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 Margin="10"
                 FontFamily="Consolas"/>

        <!-- Información de conexión -->
        <Label x:Name="ConnectionInfo"
               Grid.Row="3"
               Content="Puerto: 8888 | Clientes conectados: 0"
               HorizontalAlignment="Center"
               Margin="10"/>
    </Grid>
</Window>